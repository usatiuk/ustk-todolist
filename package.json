{
  "name": "todolist",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "npx concurrently npm:client npm:server -c 'blue,green'",
