    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^24.0.0",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "prettier-eslint": "^11.0.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests/"
