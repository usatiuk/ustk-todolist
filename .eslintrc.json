{
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "plugins": ["jest", "prettier"],
  "rules": {
    "linebreak-style": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "prettier/prettier": "error",
    "no-console": "warn",
    "no-underscore-dangle": [
      "warn",
      {
        "allow": ["_id"]
      }
    ],
    "func-names": "off"
  },
  "env": {
    "node": true
  }
}
