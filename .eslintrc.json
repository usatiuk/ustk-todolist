{
  "extends": ["airbnb", "plugin:jest/recommended"],
  "plugins": ["jest"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "linebreak-style": "off",
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "max-len": "off",
    "react/forbid-prop-types": "off"
  },
  "env": {
    "browser": true
  }
}
